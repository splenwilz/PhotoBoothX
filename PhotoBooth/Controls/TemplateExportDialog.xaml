<Window x:Class="Photobooth.Controls.TemplateExportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export Templates" 
        Height="450" Width="550"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2563EB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Error Style -->
        <Style x:Key="ComboBoxErrorStyle" TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="#DC2626"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="#FEF2F2"/>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F1F5F9"/>
                                <Setter Property="BorderBrush" Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Background="White" 
            CornerRadius="12" 
            BorderThickness="0"
            Margin="8">
        
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="25" ShadowDepth="5" Opacity="0.2"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#F8FAFC" CornerRadius="12,12,0,0" Padding="24,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="ðŸ“¥" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <StackPanel>
                            <TextBlock Text="Export Templates" FontSize="18" FontWeight="Bold" Foreground="#0F172A"/>
                            <TextBlock Text="Choose templates and export options" FontSize="14" Foreground="#64748B"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <Button Name="CloseButton" Grid.Column="1" 
                            Background="Transparent" BorderThickness="0"
                            Width="32" Height="32" Click="CloseButton_Click">
                        <TextBlock Text="âœ•" FontSize="16" Foreground="#64748B"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24">
                <StackPanel>
                    <!-- Selection Options -->
                    <Border Background="#F8FAFC" Padding="20" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1" Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="What to Export" FontSize="16" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,16"/>
                            
                            <RadioButton Name="ExportSelectedRadio" Content="Export Selected Templates" 
                                        FontSize="14" Foreground="#374151" Margin="0,0,0,8"
                                        IsChecked="True" Checked="ExportOption_Changed"/>
                            <TextBlock Name="SelectedCountText" Text="0 templates selected" 
                                      FontSize="12" Foreground="#64748B" Margin="20,0,0,12"/>
                            
                            <RadioButton Name="ExportAllRadio" Content="Export All Templates" 
                                        FontSize="14" Foreground="#374151" Margin="0,0,0,8"
                                        Checked="ExportOption_Changed"/>
                            <TextBlock Name="AllCountText" Text="0 total templates" 
                                      FontSize="12" Foreground="#64748B" Margin="20,0,0,12"/>
                            
                            <RadioButton Name="ExportCategoryRadio" Content="Export by Category" 
                                        FontSize="14" Foreground="#374151" Margin="0,0,0,8"
                                        Checked="ExportOption_Changed"/>
                            <StackPanel Margin="20,0,0,12">
                            <ComboBox Name="CategoryComboBox" Width="200" Height="32" 
                                         HorizontalAlignment="Left"
                                     DisplayMemberPath="Name" SelectedValuePath="Id"
                                         IsEnabled="False" SelectionChanged="CategoryComboBox_SelectionChanged"/>
                                <TextBlock Name="CategoryErrorText" 
                                          Text="Please select a category to export"
                                          FontSize="12" Foreground="#DC2626" 
                                          Margin="0,4,0,0" Visibility="Collapsed"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Export Options -->
                    <Border Background="#F8FAFC" Padding="20" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1" Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="Export Options" FontSize="16" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,16"/>
                            
                            <CheckBox Name="IncludeInactiveCheckBox" Content="Include inactive templates" 
                                     FontSize="14" Foreground="#374151" Margin="0,0,0,8"/>
                            
                            <CheckBox Name="OrganizeByCategoryCheckBox" Content="Organize by layout structure (Layout/Template)" 
                                     FontSize="14" Foreground="#374151" Margin="0,0,0,8" IsChecked="True"/>
                            
                            <CheckBox Name="IncludePreviewsCheckBox" Content="Include preview images" 
                                     FontSize="14" Foreground="#374151" Margin="0,0,0,8" IsChecked="True"/>
                        </StackPanel>
                    </Border>

                    <!-- Export Summary -->
                    <Border Background="#EBF8FF" Padding="16" CornerRadius="8" BorderBrush="#3B82F6" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Export Summary" FontSize="14" FontWeight="SemiBold" Foreground="#1E40AF" Margin="0,0,0,8"/>
                            <TextBlock Name="SummaryText" Text="Ready to export templates as ZIP file" 
                                      FontSize="13" Foreground="#1E40AF" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" Background="#F8FAFC" CornerRadius="0,0,12,12" Padding="24,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Name="CancelButton" Grid.Column="1"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Height="44" Margin="0,0,12,0"
                            Click="CancelButton_Click">
                        <TextBlock Text="Cancel" FontSize="14" FontWeight="Medium"/>
                    </Button>
                    
                    <Button Name="ExportButton" Grid.Column="2"
                            Style="{StaticResource ActionButtonStyle}"
                            Height="44" Click="ExportButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“¥" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="Export Templates" FontSize="14" FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window> 