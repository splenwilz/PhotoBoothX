<UserControl x:Class="Photobooth.Controls.TemplateActionsDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="400">

    <UserControl.Resources>
        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                x:Name="ButtonBorder">
                            <ContentPresenter HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#F9FAFB"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#D1D5DB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="White"
            CornerRadius="16"
            BorderThickness="0"
            Margin="8">
        <Border.Effect>
            <DropShadowEffect Color="Black"
                            Direction="270"
                            ShadowDepth="8"
                            BlurRadius="30"
                            Opacity="0.15"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Content -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Background="#F8FAFC"
                    CornerRadius="16,16,0,0"
                    Padding="24,20"
                    Grid.Row="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Title Section -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Template Actions"
                                 FontSize="18"
                                 FontWeight="SemiBold"
                                 Foreground="#111827"/>
                        <TextBlock x:Name="TemplateNameText"
                                 FontSize="14"
                                 Foreground="#6B7280"
                                 Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Grid.Column="1"
                            Content="âœ•"
                            Width="32"
                            Height="32"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="14"
                            Foreground="#6B7280"
                            Cursor="Hand"
                            VerticalAlignment="Center"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1"
                        Margin="24,20">

                <!-- Edit Template -->
                <Button Style="{StaticResource ActionButtonStyle}"
                        Click="EditTemplate_Click">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Edit Template"
                                 FontSize="14"
                                 FontWeight="Medium"
                                 Foreground="#111827"/>
                        <TextBlock Text="Modify template properties and settings"
                                 FontSize="12"
                                 Foreground="#6B7280"
                                 Margin="0,2,0,0"
                                 TextWrapping="Wrap"/>
                    </StackPanel>
                </Button>

                <!-- Duplicate Template -->
                <Button Style="{StaticResource ActionButtonStyle}"
                        Click="DuplicateTemplate_Click">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Duplicate Template"
                                 FontSize="14"
                                 FontWeight="Medium"
                                 Foreground="#111827"/>
                        <TextBlock Text="Create a copy of this template"
                                 FontSize="12"
                                 Foreground="#6B7280"
                                 Margin="0,2,0,0"
                                 TextWrapping="Wrap"/>
                    </StackPanel>
                </Button>

                <!-- Rename Template -->
                <Button Style="{StaticResource ActionButtonStyle}"
                        Click="RenameTemplate_Click">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Rename Template"
                                 FontSize="14"
                                 FontWeight="Medium"
                                 Foreground="#111827"/>
                        <TextBlock Text="Change the template name"
                                 FontSize="12"
                                 Foreground="#6B7280"
                                 Margin="0,2,0,0"
                                 TextWrapping="Wrap"/>
                    </StackPanel>
                </Button>

                <!-- Toggle Template -->
                <Button x:Name="ToggleButton"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="ToggleTemplate_Click">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="ToggleButtonTitle"
                                 FontSize="14"
                                 FontWeight="Medium"
                                 Foreground="#111827"/>
                        <TextBlock x:Name="ToggleButtonDescription"
                                 FontSize="12"
                                 Foreground="#6B7280"
                                 Margin="0,2,0,0"
                                 TextWrapping="Wrap"/>
                    </StackPanel>
                </Button>

                <!-- Delete Template -->
                <Button Style="{StaticResource ActionButtonStyle}"
                        Click="DeleteTemplate_Click">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Delete Template"
                                 FontSize="14"
                                 FontWeight="Medium"
                                 Foreground="#DC2626"/>
                        <TextBlock Text="Permanently remove this template"
                                 FontSize="12"
                                 Foreground="#6B7280"
                                 Margin="0,2,0,0"
                                 TextWrapping="Wrap"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </Grid>
    </Border>
</UserControl> 