<UserControl x:Class="PhotoBooth.Controls.SystemDateDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="500">
    
    <UserControl.Resources>
        <!-- Modern Card Style -->
        <Style x:Key="InfoCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Season Status Style -->
        <Style x:Key="SeasonStatusStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
        </Style>

        <!-- Active Season Style -->
        <Style x:Key="ActiveSeasonStyle" TargetType="Border" BasedOn="{StaticResource SeasonStatusStyle}">
            <Setter Property="Background" Value="#DCFCE7"/>
            <Setter Property="BorderBrush" Value="#16A34A"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Inactive Season Style -->
        <Style x:Key="InactiveSeasonStyle" TargetType="Border" BasedOn="{StaticResource SeasonStatusStyle}">
            <Setter Property="Background" Value="#FEF2F2"/>
            <Setter Property="BorderBrush" Value="#DC2626"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Resources>

            <Border Background="#F8FAFC" CornerRadius="16" Padding="24" Width="620" MaxWidth="700" >
        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="600">
            <StackPanel Margin="0,0,16,0">
                <!-- Header -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="🗓" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <StackPanel>
                            <TextBlock Text="System Date &amp; Seasonal Status" FontSize="20" FontWeight="SemiBold" 
                                      Foreground="#111827"/>
                            <TextBlock Text="Current system information and seasonal template availability" 
                                      FontSize="14" Foreground="#6B7280" Margin="0,4,0,0"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <Button Name="CloseButton" Grid.Column="1" 
                            Width="32" Height="32" Background="Transparent" BorderThickness="0"
                            Cursor="Hand" Click="CloseButton_Click">
                        <TextBlock Text="✕" FontSize="16" Foreground="#6B7280"/>
                    </Button>
                </Grid>

                <!-- System Information Card -->
                <Border Style="{StaticResource InfoCardStyle}">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" Background="#EBF8FF" Width="40" Height="40" 
                                    CornerRadius="20" Margin="0,0,16,0">
                                <TextBlock Text="🖥" FontSize="20" HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="System Information" FontSize="16" FontWeight="SemiBold" 
                                          Foreground="#111827"/>
                                <TextBlock Text="Current system date and timezone details" FontSize="13" 
                                          Foreground="#6B7280" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>
                        
                        <StackPanel>
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                    <TextBlock Text="System Date" FontSize="12" FontWeight="Medium" 
                                              Foreground="#374151" Margin="0,0,0,4"/>
                                    <TextBlock Name="SystemDateText" Text="Loading..." FontSize="13" 
                                              Foreground="#111827" FontWeight="Medium" TextWrapping="Wrap"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text="Time Zone" FontSize="12" FontWeight="Medium" 
                                              Foreground="#374151" Margin="0,0,0,4"/>
                                    <TextBlock Name="TimeZoneText" Text="Loading..." FontSize="13" 
                                              Foreground="#111827" FontWeight="Medium" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                    <TextBlock Text="Season Date" FontSize="12" FontWeight="Medium" 
                                              Foreground="#374151" Margin="0,0,0,4"/>
                                    <TextBlock Name="SeasonDateText" Text="Loading..." FontSize="13" 
                                              Foreground="#111827" FontWeight="Medium" TextWrapping="Wrap"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text="Active Seasons" FontSize="12" FontWeight="Medium" 
                                              Foreground="#374151" Margin="0,0,0,4"/>
                                    <TextBlock Name="ActiveSeasonsText" Text="Loading..." FontSize="13" 
                                              Foreground="#111827" FontWeight="Medium" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Seasonal Categories Card -->
                <Border Style="{StaticResource InfoCardStyle}">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" Background="#FEF3C7" Width="40" Height="40" 
                                    CornerRadius="20" Margin="0,0,16,0">
                                <TextBlock Text="🌟" FontSize="20" HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Seasonal Categories" FontSize="16" FontWeight="SemiBold" 
                                          Foreground="#111827"/>
                                <TextBlock Text="Template categories with seasonal availability" FontSize="13" 
                                          Foreground="#6B7280" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Seasonal Categories List -->
                        <StackPanel Name="SeasonalCategoriesPanel">
                            <!-- Categories will be added dynamically -->
                        </StackPanel>
                        
                        <!-- No Seasonal Categories Message -->
                        <Border Name="NoSeasonsPanel" Background="#F8FAFC" BorderBrush="#E2E8F0" 
                                BorderThickness="1" CornerRadius="8" Padding="16" Visibility="Collapsed">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="📅" FontSize="32" HorizontalAlignment="Center" 
                                          Margin="0,0,0,8"/>
                                <TextBlock Text="No Seasonal Categories" FontSize="14" FontWeight="Medium" 
                                          Foreground="#6B7280" HorizontalAlignment="Center"/>
                                <TextBlock Text="All template categories are available year-round" 
                                          FontSize="12" Foreground="#9CA3AF" HorizontalAlignment="Center" 
                                          Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Quick Actions Card -->
                <Border Style="{StaticResource InfoCardStyle}">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" Background="#F3E8FF" Width="40" Height="40" 
                                    CornerRadius="20" Margin="0,0,16,0">
                                <TextBlock Text="⚡" FontSize="20" HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Quick Actions" FontSize="16" FontWeight="SemiBold" 
                                          Foreground="#111827"/>
                                <TextBlock Text="Manage seasonal template visibility" FontSize="13" 
                                          Foreground="#6B7280" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" Background="#3B82F6" CornerRadius="8" 
                                    Height="36" Margin="0,0,8,0" Cursor="Hand">
                                <Button Name="ShowAllSeasonsButton" Background="Transparent" 
                                        Foreground="White" BorderThickness="0" Cursor="Hand"
                                        Click="ShowAllSeasonsButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="👁" FontSize="12" Margin="0,0,6,0"/>
                                        <TextBlock Text="Show All Seasons" FontSize="13" FontWeight="Medium"/>
                                    </StackPanel>
                                </Button>
                            </Border>
                            
                            <Border Grid.Column="1" Background="Transparent" BorderBrush="#D1D5DB" 
                                    BorderThickness="1" CornerRadius="8" Height="36" Margin="8,0,0,0" Cursor="Hand">
                                <Button Name="RefreshDataButton" Background="Transparent" 
                                        Foreground="#374151" BorderThickness="0" Cursor="Hand"
                                        Click="RefreshDataButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🔄" FontSize="12" Margin="0,0,6,0"/>
                                        <TextBlock Text="Refresh Data" FontSize="13" FontWeight="Medium"/>
                                    </StackPanel>
                                </Button>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl> 