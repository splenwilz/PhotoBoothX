<UserControl x:Class="Photobooth.Controls.VirtualKeyboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="280" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <!-- Virtual Keyboard Key Style -->
        <Style x:Key="VirtualKeyStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F3F4F6"/>
                                <Setter Property="BorderBrush" Value="#9CA3AF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E5E7EB"/>
                                <Setter Property="BorderBrush" Value="#6B7280"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Special Key Style (larger, different color) -->
        <Style x:Key="SpecialKeyStyle" TargetType="Button" BasedOn="{StaticResource VirtualKeyStyle}">
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#4B5563"/>
        </Style>

        <!-- Action Key Style (Enter, etc.) -->
        <Style x:Key="ActionKeyStyle" TargetType="Button" BasedOn="{StaticResource VirtualKeyStyle}">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="BorderBrush" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseKeyStyle" TargetType="Button" BasedOn="{StaticResource VirtualKeyStyle}">
            <Setter Property="Background" Value="#EF4444"/>
            <Setter Property="BorderBrush" Value="#DC2626"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </UserControl.Resources>

    <!-- Main Keyboard Container -->
    <Border BorderThickness="1,1,1,0" CornerRadius="12,12,0,0" Padding="4,10,4,0" Name="MainBorder">
        <Border.Background>
            <SolidColorBrush Color="#F8FAFC" Opacity="0.6"/>
        </Border.Background>
        <Border.BorderBrush>
            <SolidColorBrush Color="#E5E7EB" Opacity="0.5"/>
        </Border.BorderBrush>
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="4" Opacity="0.2"/>
        </Border.Effect>
        
        <!-- Add Grid container for resize grips -->
        <Grid>
            <!-- Main content -->
            <StackPanel Name="MainContent">
                <!-- Keyboard Header (Draggable) -->
                <Grid Margin="0,8,0,6" Name="HeaderGrid" Background="Transparent" 
                      MouseLeftButtonDown="HeaderGrid_MouseLeftButtonDown" Cursor="SizeAll">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Drag Handle Icon -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="⋮⋮" FontSize="20" FontWeight="Bold" Foreground="#6B7280" 
                                  Margin="0,0,8,0" VerticalAlignment="Center" 
                                  ToolTip="Drag to move keyboard"/>
                        <TextBlock Text="Virtual Keyboard" FontSize="16" FontWeight="SemiBold" 
                                  Foreground="#374151" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Size Presets -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,12,0">
                        <Button Name="SmallSizeButton" Content="S" Width="40" Height="32" 
                                Style="{StaticResource SpecialKeyStyle}" FontSize="12" FontWeight="Bold"
                                Click="SmallSizeButton_Click" Margin="0,0,2,0"
                                ToolTip="Small keyboard"/>
                        <Button Name="MediumSizeButton" Content="M" Width="40" Height="32" 
                                Style="{StaticResource ActionKeyStyle}" FontSize="12" FontWeight="Bold"
                                Click="MediumSizeButton_Click" Margin="0,0,2,0"
                                ToolTip="Medium keyboard"/>
                        <Button Name="LargeSizeButton" Content="L" Width="40" Height="32" 
                                Style="{StaticResource SpecialKeyStyle}" FontSize="12" FontWeight="Bold"
                                Click="LargeSizeButton_Click" Margin="0,0,8,0"
                                ToolTip="Large keyboard"/>
                    </StackPanel>

                    <!-- Mode Toggle Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,12,0">
                        <Button Name="TextModeButton" Content="ABC" Width="60" Height="32" 
                                Style="{StaticResource SpecialKeyStyle}" FontSize="12" 
                                Click="TextModeButton_Click" Margin="0,0,4,0"/>
                        <Button Name="NumericModeButton" Content="123" Width="60" Height="32" 
                                Style="{StaticResource SpecialKeyStyle}" FontSize="12" 
                                Click="NumericModeButton_Click" Margin="0,0,4,0"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Name="CloseButton" Grid.Column="3" Content="✕" Width="40" Height="32" 
                            Style="{StaticResource CloseKeyStyle}" FontSize="16" 
                            Click="CloseButton_Click"/>
                </Grid>

                <!-- Text Mode Layout -->
                <Grid Name="TextModeLayout" Height="180">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Row 1: Numbers and Punctuation -->
                    <UniformGrid Grid.Row="0" Rows="1" Columns="12" Margin="0,0,0,1">
                        <Button Content="1" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="2" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="3" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="4" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="5" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="6" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="7" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="8" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="9" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="0" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="-" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="=" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                    </UniformGrid>

                    <!-- Row 2: QWERTY with punctuation -->
                    <Grid Grid.Row="1" Margin="0,0,0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0" Name="KeyQ" Content="q" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="1" Name="KeyW" Content="w" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="2" Name="KeyE" Content="e" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="3" Name="KeyR" Content="r" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="4" Name="KeyT" Content="t" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="5" Name="KeyY" Content="y" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="6" Name="KeyU" Content="u" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="7" Name="KeyI" Content="i" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="8" Name="KeyO" Content="o" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="9" Name="KeyP" Content="p" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="10" Content="[" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="11" Content="]" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                    </Grid>

                    <!-- Row 3: ASDF + Caps Lock with punctuation -->
                    <Grid Grid.Row="2" Margin="0,0,0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0" Name="CapsLockButton" Content="⇪ Caps" Style="{StaticResource SpecialKeyStyle}" Click="CapsLockButton_Click"/>
                        <Button Grid.Column="1" Name="KeyA" Content="a" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="2" Name="KeyS" Content="s" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="3" Name="KeyD" Content="d" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="4" Name="KeyF" Content="f" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="5" Name="KeyG" Content="g" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="6" Name="KeyH" Content="h" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="7" Name="KeyJ" Content="j" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="8" Name="KeyK" Content="k" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="9" Name="KeyL" Content="l" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="10" Content=";" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="11" Content="'" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                    </Grid>

                    <!-- Row 4: ZXCV + Controls with punctuation -->
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1.5*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Name="ShiftButton" Content="⇧ Shift" Style="{StaticResource SpecialKeyStyle}" Click="ShiftButton_Click"/>
                        <Button Grid.Column="1" Name="KeyZ" Content="z" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="2" Name="KeyX" Content="x" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="3" Name="KeyC" Content="c" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="4" Name="KeyV" Content="v" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="5" Name="KeyB" Content="b" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="6" Name="KeyN" Content="n" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="7" Name="KeyM" Content="m" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="8" Content="," Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="9" Content="." Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="10" Content="/" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Grid.Column="11" Name="SpaceButton" Content="Space" Style="{StaticResource SpecialKeyStyle}" Click="SpaceButton_Click"/>
                        <Button Grid.Column="12" Name="BackspaceButton" Content="⌫" Style="{StaticResource SpecialKeyStyle}" Click="BackspaceButton_Click"/>
                        <Button Grid.Column="13" Name="EnterButton" Content="↵" Style="{StaticResource ActionKeyStyle}" Click="EnterButton_Click"/>
                    </Grid>
                </Grid>

                <!-- Numeric Mode Layout -->
                <Grid Name="NumericModeLayout" Height="180" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <UniformGrid Grid.Row="0" Rows="1" Columns="6" Margin="150,0,150,4">
                        <Button Content="7" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="8" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="9" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="/" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="(" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content=")" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                    </UniformGrid>

                    <UniformGrid Grid.Row="1" Rows="1" Columns="6" Margin="150,0,150,4">
                        <Button Content="4" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="5" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="6" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="*" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="%" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="$" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                    </UniformGrid>

                    <UniformGrid Grid.Row="2" Rows="1" Columns="6" Margin="150,0,150,4">
                        <Button Content="1" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="2" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="3" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="-" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="+" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="=" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                    </UniformGrid>

                    <UniformGrid Grid.Row="3" Rows="1" Columns="6" Margin="150,0,150,0">
                        <Button Content="0" Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="." Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="," Style="{StaticResource VirtualKeyStyle}" Click="KeyButton_Click"/>
                        <Button Content="⌫" Style="{StaticResource SpecialKeyStyle}" Click="BackspaceButton_Click"/>
                        <Button Content="Space" Style="{StaticResource SpecialKeyStyle}" Click="SpaceButton_Click"/>
                        <Button Content="↵" Style="{StaticResource ActionKeyStyle}" Click="EnterButton_Click"/>
                    </UniformGrid>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</UserControl> 