<Window x:Class="Photobooth.Controls.CategoryManagementDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:behaviors="clr-namespace:Photobooth.Behaviors"
        Title="Manage Template Categories" 
        Height="600" Width="650"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2563EB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F1F5F9"/>
                                <Setter Property="BorderBrush" Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Professional Action Button Style for Category Actions -->
        <Style x:Key="ModernActionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="8,4">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="1" BlurRadius="3" Opacity="0.15"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" BlurRadius="6" Opacity="0.25"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="ButtonBorder" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="-1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="0.5" BlurRadius="2" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="ButtonBorder" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Background="White" 
            CornerRadius="12" 
            BorderThickness="0"
            Margin="8">
        
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="25" ShadowDepth="5" Opacity="0.2"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#F8FAFC" CornerRadius="12,12,0,0" Padding="24,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="ðŸ“" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <StackPanel>
                            <TextBlock Text="Manage Template Categories" FontSize="18" FontWeight="Bold" Foreground="#0F172A"/>
                            <TextBlock Text="Add and organize template categories" FontSize="14" Foreground="#64748B"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <Button Name="CloseButton" Grid.Column="1" 
                            Background="Transparent" BorderThickness="0"
                            Width="32" Height="32" Click="CloseButton_Click">
                        <TextBlock Text="âœ•" FontSize="16" Foreground="#64748B"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                        VerticalScrollBarVisibility="Auto" 
                        Padding="24">
                <StackPanel>
                    <!-- Add New Category Section -->
                    <Border Background="#F8FAFC" Padding="20" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1" Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="Add New Category" FontSize="16" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,16"/>
                            
                            <!-- Category Name -->
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Category Name *" FontSize="12" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,8"/>
                                <TextBox Name="CategoryNameTextBox" 
                                         Height="44" Padding="12" FontSize="14"
                                         BorderBrush="#D1D5DB" Background="White" BorderThickness="1"
                                         behaviors:VirtualKeyboardBehavior.EnableVirtualKeyboard="True" />
                            </StackPanel>
                            
                            <!-- Category Description -->
                            <StackPanel Margin="0,0,0,16">
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Description (Optional)" FontSize="12" FontWeight="Medium" Foreground="#374151"/>
                                    <TextBlock Name="DescriptionCharCount" Grid.Column="1" Text="0/200" FontSize="10" Foreground="#9CA3AF"/>
                                </Grid>
                                <TextBox Name="CategoryDescriptionTextBox" 
                                         Height="80" Padding="12" FontSize="14"
                                         BorderBrush="#D1D5DB" Background="White" BorderThickness="1"
                                         TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                                         MaxLength="200" TextChanged="CategoryDescription_TextChanged"
                                         behaviors:VirtualKeyboardBehavior.EnableVirtualKeyboard="True" />
                                <TextBlock Text="Briefly describe what types of templates belong in this category" 
                                           FontSize="11" Foreground="#9CA3AF" Margin="0,6,0,0"/>
                            </StackPanel>

                            <!-- Seasonal Configuration -->
                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="Seasonal Configuration" FontSize="14" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,12"/>
                                
                                <!-- Seasonal Toggle -->
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <CheckBox Name="IsSeasonalCheckBox" Grid.Column="0" 
                                              FontSize="12" FontWeight="Medium" Foreground="#374151"
                                              VerticalAlignment="Center" 
                                              Checked="IsSeasonalCheckBox_Changed" Unchecked="IsSeasonalCheckBox_Changed">
                                        <TextBlock Text="ðŸ—“ï¸ This is a seasonal category" Margin="8,0,0,0"/>
                                    </CheckBox>
                                </Grid>
                                
                                <!-- Seasonal Date Settings (Initially Collapsed) -->
                                <StackPanel Name="SeasonalSettingsPanel" Visibility="Collapsed">
                                    <Border Background="#FEF7FF" BorderBrush="#E879F9" BorderThickness="1" 
                                            CornerRadius="8" Padding="16" Margin="0,0,0,16">
                                        <StackPanel>
                                            <TextBlock Text="ðŸ—“ï¸ Season Period Configuration" FontSize="13" FontWeight="SemiBold" 
                                                       Foreground="#7C2D92" Margin="0,0,0,12"/>
                                            
                                            <!-- Season Dates Grid -->
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="16"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Start Date -->
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="Season Start Date" FontSize="11" FontWeight="Medium" 
                                                               Foreground="#374151" Margin="0,0,0,6"/>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="8"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <ComboBox Name="StartMonthComboBox" Grid.Column="0" Height="36" FontSize="13"
                                                                  Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                                                  SelectionChanged="SeasonDate_Changed">
                                                            <ComboBoxItem Content="Jan" Tag="01"/>
                                                            <ComboBoxItem Content="Feb" Tag="02"/>
                                                            <ComboBoxItem Content="Mar" Tag="03"/>
                                                            <ComboBoxItem Content="Apr" Tag="04"/>
                                                            <ComboBoxItem Content="May" Tag="05"/>
                                                            <ComboBoxItem Content="Jun" Tag="06"/>
                                                            <ComboBoxItem Content="Jul" Tag="07"/>
                                                            <ComboBoxItem Content="Aug" Tag="08"/>
                                                            <ComboBoxItem Content="Sep" Tag="09"/>
                                                            <ComboBoxItem Content="Oct" Tag="10"/>
                                                            <ComboBoxItem Content="Nov" Tag="11"/>
                                                            <ComboBoxItem Content="Dec" Tag="12"/>
                                                        </ComboBox>
                                                        
                                                        <ComboBox Name="StartDayComboBox" Grid.Column="2" Height="36" FontSize="13"
                                                                  Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                                                  SelectionChanged="SeasonDate_Changed">
                                                            <!-- Days 1-31 will be populated programmatically -->
                                                        </ComboBox>
                                                    </Grid>
                                                </StackPanel>
                                                
                                                <!-- Arrow -->
                                                <TextBlock Grid.Column="1" Text="â†’" FontSize="16" 
                                                          HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                                                          Margin="0,0,0,8" Foreground="#9CA3AF"/>
                                                
                                                <!-- End Date -->
                                                <StackPanel Grid.Column="2">
                                                    <TextBlock Text="Season End Date" FontSize="11" FontWeight="Medium" 
                                                               Foreground="#374151" Margin="0,0,0,6"/>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="8"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <ComboBox Name="EndMonthComboBox" Grid.Column="0" Height="36" FontSize="13"
                                                                  Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                                                  SelectionChanged="SeasonDate_Changed">
                                                            <ComboBoxItem Content="Jan" Tag="01"/>
                                                            <ComboBoxItem Content="Feb" Tag="02"/>
                                                            <ComboBoxItem Content="Mar" Tag="03"/>
                                                            <ComboBoxItem Content="Apr" Tag="04"/>
                                                            <ComboBoxItem Content="May" Tag="05"/>
                                                            <ComboBoxItem Content="Jun" Tag="06"/>
                                                            <ComboBoxItem Content="Jul" Tag="07"/>
                                                            <ComboBoxItem Content="Aug" Tag="08"/>
                                                            <ComboBoxItem Content="Sep" Tag="09"/>
                                                            <ComboBoxItem Content="Oct" Tag="10"/>
                                                            <ComboBoxItem Content="Nov" Tag="11"/>
                                                            <ComboBoxItem Content="Dec" Tag="12"/>
                                                        </ComboBox>
                                                        
                                                        <ComboBox Name="EndDayComboBox" Grid.Column="2" Height="36" FontSize="13"
                                                                  Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                                                  SelectionChanged="SeasonDate_Changed">
                                                            <!-- Days 1-31 will be populated programmatically -->
                                                        </ComboBox>
                                                    </Grid>
                                                </StackPanel>
                                            </Grid>
                                            
                                            <!-- Season Priority -->
                                            <StackPanel Margin="0,16,0,0">
                                                <TextBlock Text="Season Priority" FontSize="11" FontWeight="Medium" 
                                                           Foreground="#374151" Margin="0,0,0,6"/>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                                                        <TextBox Name="SeasonPriorityTextBox" Grid.Column="0" Height="36" Padding="8" 
                                             FontSize="13" Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                             Text="100" TextChanged="SeasonPriority_TextChanged"
                                             behaviors:VirtualKeyboardBehavior.EnableVirtualKeyboard="True" />
                                                    
                                                    <TextBlock Grid.Column="1" Text="Higher numbers appear first during season (0-999)" 
                                                               FontSize="11" Foreground="#9CA3AF" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                                </Grid>
                                            </StackPanel>
                                            
                                            <!-- Season Preview -->
                                            <Border Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="1" 
                                                    CornerRadius="6" Padding="12" Margin="0,16,0,0">
                                                <StackPanel>
                                                    <TextBlock Text="ðŸ“… Season Preview" FontSize="11" FontWeight="SemiBold" 
                                                               Foreground="#374151" Margin="0,0,0,6"/>
                                                    <TextBlock Name="SeasonPreviewText" Text="Set dates to see preview" 
                                                               FontSize="11" Foreground="#64748B" TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Quick Presets -->
                                    <StackPanel>
                                        <TextBlock Text="ðŸŽ¯ Quick Presets" FontSize="12" FontWeight="Medium" 
                                                   Foreground="#374151" Margin="0,0,0,8"/>
                                        <WrapPanel>
                                            <Button Name="ValentinesPresetButton" Content="ðŸ’• Valentine's" Style="{StaticResource SecondaryButtonStyle}"
                                                    Margin="0,0,8,8" FontSize="11" Height="32" Click="ValentinesPreset_Click"/>
                                            <Button Name="EasterPresetButton" Content="ðŸ° Easter" Style="{StaticResource SecondaryButtonStyle}"
                                                    Margin="0,0,8,8" FontSize="11" Height="32" Click="EasterPreset_Click"/>
                                            <Button Name="HalloweenPresetButton" Content="ðŸŽƒ Halloween" Style="{StaticResource SecondaryButtonStyle}"
                                                    Margin="0,0,8,8" FontSize="11" Height="32" Click="HalloweenPreset_Click"/>
                                            <Button Name="ChristmasPresetButton" Content="ðŸŽ„ Christmas" Style="{StaticResource SecondaryButtonStyle}"
                                                    Margin="0,0,8,8" FontSize="11" Height="32" Click="ChristmasPreset_Click"/>
                                            <Button Name="NewYearPresetButton" Content="ðŸŽ† New Year" Style="{StaticResource SecondaryButtonStyle}"
                                                    Margin="0,0,8,8" FontSize="11" Height="32" Click="NewYearPreset_Click"/>
                                            <Button Name="SummerPresetButton" Content="â˜€ï¸ Summer" Style="{StaticResource SecondaryButtonStyle}"
                                                    Margin="0,0,8,8" FontSize="11" Height="32" Click="SummerPreset_Click"/>
                                        </WrapPanel>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Add/Update Button -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Button Name="CancelEditButton" Grid.Column="1"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Height="44" Margin="0,0,12,0" Visibility="Collapsed"
                                        Click="CancelEdit_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="âœ–ï¸" FontSize="14" Margin="0,0,8,0"/>
                                        <TextBlock Text="Cancel Edit" FontSize="14" FontWeight="Medium"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button Name="AddCategoryButton" Grid.Column="2"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Height="44"
                                        Click="AddCategory_Click">
                                    <StackPanel Orientation="Horizontal" Name="AddButtonContent">
                                        <TextBlock Text="âž•" FontSize="14" Margin="0,0,8,0"/>
                                        <TextBlock Text="Add Category" FontSize="14" FontWeight="Medium"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Existing Categories List -->
                    <StackPanel>
                        <TextBlock Text="Existing Categories" FontSize="16" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,16"/>
                        <StackPanel Name="CategoriesListPanel">
                            <!-- Categories will be loaded dynamically -->
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" Background="#F8FAFC" CornerRadius="0,0,12,12" Padding="24,16">
                <Button Name="CloseFooterButton" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Height="44" HorizontalAlignment="Right"
                        Click="CloseButton_Click">
                    <TextBlock Text="Close" FontSize="14" FontWeight="Medium"/>
                </Button>
            </Border>
        </Grid>
    </Border>
</Window> 