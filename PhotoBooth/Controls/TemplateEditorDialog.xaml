<Window x:Class="Photobooth.Controls.TemplateEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Template" 
        Height="700" Width="600"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    
    <Border Background="White" 
            CornerRadius="16" 
            BorderThickness="0"
            Margin="8">
        
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="30" ShadowDepth="8" Opacity="0.15"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#F8FAFC" 
                    CornerRadius="16,16,0,0" 
                    Padding="24,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Icon -->
                    <Border Grid.Column="0" 
                            Width="40" Height="40" 
                            Background="#3B82F6" 
                            CornerRadius="20" 
                            Margin="0,0,16,0">
                        <TextBlock Text="✏️" 
                                  FontSize="18" 
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"/>
                    </Border>
                    
                    <!-- Title -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Edit Template" 
                                  FontSize="20" 
                                  FontWeight="SemiBold" 
                                  Foreground="#111827"/>
                        <TextBlock x:Name="TemplateNameHeader" 
                                  Text="Template Name" 
                                  FontSize="14" 
                                  Foreground="#6B7280" 
                                  Margin="0,2,0,0"/>
                    </StackPanel>
                    
                    <!-- Close Button -->
                    <Button Grid.Column="2" 
                            x:Name="CloseButton"
                            Width="32" Height="32"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="CloseButton_Click">
                        <TextBlock Text="✕" 
                                  FontSize="14" 
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"
                                  Foreground="#6B7280"/>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto" 
                         Padding="24,20">
                <StackPanel>
                    
                    <!-- Basic Information Section -->
                    <StackPanel Margin="0,0,0,24">
                        <TextBlock Text="Basic Information" 
                                  FontSize="16" 
                                  FontWeight="SemiBold" 
                                  Foreground="#374151" 
                                  Margin="0,0,0,12"/>
                        
                        <!-- Template Name -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                      Text="Name" 
                                      FontSize="14" 
                                      FontWeight="Medium" 
                                      Foreground="#374151" 
                                      VerticalAlignment="Center"/>
                            <TextBlock x:Name="NameTextBlock" 
                                      Grid.Column="1" 
                                      Text="Template Name"
                                      FontSize="14"
                                      Foreground="#1F2937"
                                      VerticalAlignment="Center"
                                      Background="#F9FAFB"
                                      Padding="12,10"
                                      Height="40" />
                        </Grid>
                        
                        <!-- Description -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                      Text="Description" 
                                      FontSize="14" 
                                      FontWeight="Medium" 
                                      Foreground="#374151" 
                                      VerticalAlignment="Top"
                                      Margin="0,10,0,0"/>
                            <Border Grid.Column="1" 
                                   Background="#F9FAFB"
                                   BorderBrush="#E5E7EB"
                                   BorderThickness="1"
                                   CornerRadius="6"
                                   Height="80"
                                   Padding="12,10">
                                <TextBlock x:Name="DescriptionTextBlock" 
                                          Text="Template Description"
                                          FontSize="14"
                                          Foreground="#1F2937"
                                          TextWrapping="Wrap"
                                          VerticalAlignment="Top" />
                            </Border>
                        </Grid>
                        
                        <!-- Category -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                      Text="Category" 
                                      FontSize="14" 
                                      FontWeight="Medium" 
                                      Foreground="#374151" 
                                      VerticalAlignment="Center"/>
                            <ComboBox x:Name="CategoryComboBox" 
                                     Grid.Column="1" 
                                     Height="40"
                                     Padding="12,10"
                                     FontSize="14"
                                     DisplayMemberPath="Name"
                                     SelectedValuePath="Id"/>
                        </Grid>
                        
                        <!-- Template Type -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                      Text="Template Type" 
                                      FontSize="14" 
                                      FontWeight="Medium" 
                                      Foreground="#374151" 
                                      VerticalAlignment="Center"/>
                            <ComboBox x:Name="TemplateTypeComboBox" 
                                     Grid.Column="1" 
                                     Height="40"
                                     Padding="12,10"
                                     FontSize="14">
                                <ComboBoxItem Content="Strip" Tag="0"/>
                                <ComboBoxItem Content="4x6 Photo" Tag="1"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Separator -->
                    <Border Height="1" Background="#F1F5F9" Margin="0,0,0,24"/>
                    
                    <!-- Pricing & Settings Section -->
                    <StackPanel Margin="0,0,0,24">
                        <TextBlock Text="Pricing &amp; Settings" 
                                  FontSize="16" 
                                  FontWeight="SemiBold" 
                                  Foreground="#374151" 
                                  Margin="0,0,0,12"/>
                        
                        <!-- Price -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                      Text="Price ($)" 
                                      FontSize="14" 
                                      FontWeight="Medium" 
                                      Foreground="#374151" 
                                      VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <!-- Decrease Price Button -->
                                <Button x:Name="PriceDecreaseButton" 
                                       Content="−" 
                                       Width="40" Height="40"
                                       FontSize="20" FontWeight="Bold"
                                       Background="#94A3B8" Foreground="White"
                                       BorderThickness="0"
                                       Cursor="Hand"
                                       Click="PriceDecreaseButton_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="6,0,0,6"
                                                   x:Name="ButtonBorder">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#64748B"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#475569"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                
                                <!-- Price Display -->
                                <Border Background="White" 
                                       BorderBrush="#D1D5DB" BorderThickness="1,1,1,1"
                                       Width="100" Height="40">
                                    <TextBlock x:Name="PriceDisplay" 
                                              Text="$0.00"
                                              FontSize="14" FontWeight="Medium"
                                              Foreground="#1F2937"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                
                                <!-- Increase Price Button -->
                                <Button x:Name="PriceIncreaseButton" 
                                       Content="+" 
                                       Width="40" Height="40"
                                       FontSize="20" FontWeight="Bold"
                                       Background="#60A5FA" Foreground="White"
                                       BorderThickness="0"
                                       Cursor="Hand"
                                       Click="PriceIncreaseButton_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="0,6,6,0"
                                                   x:Name="ButtonBorder">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#3B82F6"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#2563EB"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Sort Order -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                      Text="Sort Order" 
                                      FontSize="14" 
                                      FontWeight="Medium" 
                                      Foreground="#374151" 
                                      VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <!-- Decrease Sort Order Button -->
                                <Button x:Name="SortOrderDecreaseButton" 
                                       Content="−" 
                                       Width="40" Height="40"
                                       FontSize="20" FontWeight="Bold"
                                       Background="#94A3B8" Foreground="White"
                                       BorderThickness="0"
                                       Cursor="Hand"
                                       Click="SortOrderDecreaseButton_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="6,0,0,6"
                                                   x:Name="ButtonBorder">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#64748B"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#475569"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                
                                <!-- Sort Order Display -->
                                <Border Background="White" 
                                       BorderBrush="#D1D5DB" BorderThickness="1,1,1,1"
                                       Width="80" Height="40">
                                    <TextBlock x:Name="SortOrderDisplay" 
                                              Text="1"
                                              FontSize="14" FontWeight="Medium"
                                              Foreground="#1F2937"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                
                                <!-- Increase Sort Order Button -->
                                <Button x:Name="SortOrderIncreaseButton" 
                                       Content="+" 
                                       Width="40" Height="40"
                                       FontSize="20" FontWeight="Bold"
                                       Background="#60A5FA" Foreground="White"
                                       BorderThickness="0"
                                       Cursor="Hand"
                                       Click="SortOrderIncreaseButton_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="0,6,6,0"
                                                   x:Name="ButtonBorder">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#3B82F6"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#2563EB"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Active Status -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                      Text="Active" 
                                      FontSize="14" 
                                      FontWeight="Medium" 
                                      Foreground="#374151" 
                                      VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <CheckBox x:Name="IsActiveCheckBox" 
                                         VerticalAlignment="Center"
                                         Checked="IsActiveCheckBox_Changed"
                                         Unchecked="IsActiveCheckBox_Changed"/>
                                <TextBlock x:Name="ActiveStatusText" 
                                          Text="Enabled" 
                                          FontSize="14" 
                                          Foreground="#10B981" 
                                          VerticalAlignment="Center" 
                                          Margin="8,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Separator -->
                    <Border Height="1" Background="#F1F5F9" Margin="0,0,0,24"/>
                    
                    <!-- File Management Section -->
                    <StackPanel Margin="0,0,0,24">
                        <TextBlock Text="File Management" 
                                  FontSize="16" 
                                  FontWeight="SemiBold" 
                                  Foreground="#374151" 
                                  Margin="0,0,0,12"/>
                        
                        <!-- Preview Image -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                      Text="Preview Image" 
                                      FontSize="14" 
                                      FontWeight="Medium" 
                                      Foreground="#374151" 
                                      VerticalAlignment="Center"/>
                            <TextBlock x:Name="PreviewFileText" 
                                      Grid.Column="1" 
                                      Text="preview.png" 
                                      FontSize="14" 
                                      Foreground="#6B7280" 
                                      VerticalAlignment="Center"/>
                            <Button x:Name="ReplacePreviewButton" 
                                   Grid.Column="2" 
                                   Content="Replace" 
                                   Width="80"
                                   Height="32"
                                   Background="#F59E0B"
                                   BorderThickness="0"
                                   Foreground="White"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   Cursor="Hand"
                                   Click="ReplacePreviewButton_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="6"
                                               x:Name="ButtonBorder">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="ButtonBorder" Property="Background" Value="#D97706"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="ButtonBorder" Property="Background" Value="#B45309"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                        
                        <!-- Template File -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                      Text="Template File" 
                                      FontSize="14" 
                                      FontWeight="Medium" 
                                      Foreground="#374151" 
                                      VerticalAlignment="Center"/>
                            <TextBlock x:Name="TemplateFileText" 
                                      Grid.Column="1" 
                                      Text="template.png" 
                                      FontSize="14" 
                                      Foreground="#6B7280" 
                                      VerticalAlignment="Center"/>
                            <Button x:Name="ReplaceTemplateButton" 
                                   Grid.Column="2" 
                                   Content="Replace" 
                                   Width="80"
                                   Height="32"
                                   Background="#EF4444"
                                   BorderThickness="0"
                                   Foreground="White"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   Cursor="Hand"
                                   Click="ReplaceTemplateButton_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="6"
                                               x:Name="ButtonBorder">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="ButtonBorder" Property="Background" Value="#DC2626"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="ButtonBorder" Property="Background" Value="#B91C1C"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                        
                        <!-- Template Layout -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                      Text="Layout" 
                                      FontSize="14" 
                                      FontWeight="Medium" 
                                      Foreground="#374151" 
                                      VerticalAlignment="Center"/>
                            <TextBlock x:Name="LayoutText" 
                                      Grid.Column="1" 
                                      Text="strip-591x1772" 
                                      FontSize="14" 
                                      Foreground="#6B7280" 
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Separator -->
                    <Border Height="1" Background="#F1F5F9" Margin="0,0,0,24"/>
                    
                    <!-- Template Information Section -->
                    <StackPanel>
                        <TextBlock Text="Template Information" 
                                  FontSize="16" 
                                  FontWeight="SemiBold" 
                                  Foreground="#374151" 
                                  Margin="0,0,0,12"/>
                        
                        <!-- Dimensions -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                      Text="Dimensions" 
                                      FontSize="14" 
                                      FontWeight="Medium" 
                                      Foreground="#374151" 
                                      VerticalAlignment="Center"/>
                            <TextBlock x:Name="DimensionsText" 
                                      Grid.Column="1" 
                                      Text="1920 x 1080 px" 
                                      FontSize="14" 
                                      Foreground="#6B7280" 
                                      VerticalAlignment="Center"/>
                        </Grid>
                        
                        <!-- Photo Count -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                      Text="Photo Count" 
                                      FontSize="14" 
                                      FontWeight="Medium" 
                                      Foreground="#374151" 
                                      VerticalAlignment="Center"/>
                            <TextBlock x:Name="PhotoCountText" 
                                      Grid.Column="1" 
                                      Text="3" 
                                      FontSize="14" 
                                      Foreground="#6B7280" 
                                      VerticalAlignment="Center"/>
                        </Grid>
                        
                        <!-- File Size -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                      Text="File Size" 
                                      FontSize="14" 
                                      FontWeight="Medium" 
                                      Foreground="#374151" 
                                      VerticalAlignment="Center"/>
                            <TextBlock x:Name="FileSizeText" 
                                      Grid.Column="1" 
                                      Text="2.5 MB" 
                                      FontSize="14" 
                                      Foreground="#6B7280" 
                                      VerticalAlignment="Center"/>
                        </Grid>
                        
                        <!-- Upload Date -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                      Text="Uploaded" 
                                      FontSize="14" 
                                      FontWeight="Medium" 
                                      Foreground="#374151" 
                                      VerticalAlignment="Center"/>
                            <TextBlock x:Name="UploadDateText" 
                                      Grid.Column="1" 
                                      Text="March 15, 2024" 
                                      FontSize="14" 
                                      Foreground="#6B7280" 
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                    
                </StackPanel>
            </ScrollViewer>
            
            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="#F8FAFC" 
                    CornerRadius="0,0,16,16" 
                    Padding="24,16">
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right">
                    
                    <!-- Cancel Button -->
                    <Button x:Name="CancelButton" 
                           Content="Cancel" 
                           Width="100"
                           Height="40"
                           Background="Transparent"
                           BorderBrush="#D1D5DB"
                           BorderThickness="1"
                           Foreground="#6B7280"
                           FontSize="14"
                           FontWeight="Medium"
                           Cursor="Hand"
                           Margin="0,0,12,0" 
                           Click="CancelButton_Click"/>
                    
                    <!-- Save Button -->
                    <Button x:Name="SaveButton" 
                           Content="Save Changes" 
                           Width="120"
                           Height="40"
                           Background="#3B82F6"
                           BorderThickness="0"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Medium"
                           Cursor="Hand"
                           Click="SaveButton_Click"/>
                    
                </StackPanel>
            </Border>
            
        </Grid>
    </Border>
</Window>
 