<UserControl x:Class="Photobooth.PasswordResetScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:behaviors="clr-namespace:Photobooth.Behaviors"
             mc:Ignorable="d"
             d:DesignHeight="1080" d:DesignWidth="1920">

    <!-- Resources for password toggle button styling -->
    <UserControl.Resources>
        <Style x:Key="PasswordToggleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Opacity" Value="0.7"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                x:Name="Border">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="1"/>
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="White" Opacity="0.1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Gradient Button Style (same as login button) -->
        <Style x:Key="ModernGradientButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#2563EB" Offset="0"/>
                        <GradientStop Color="#7C3AED" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                x:Name="Border">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#1D4ED8" Offset="0"/>
                                            <GradientStop Color="#6D28D9" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#1E40AF" Offset="0"/>
                                            <GradientStop Color="#5B21B6" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#581C87" Offset="0"/>
                <GradientStop Color="#1E3A8A" Offset="0.5"/>
                <GradientStop Color="#3730A3" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Decorative Background Elements -->
        <Canvas>
            <Ellipse Width="160" Height="160" Canvas.Left="-80" Canvas.Top="-80" Opacity="0.1">
                <Ellipse.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#60A5FA" Offset="0"/>
                        <GradientStop Color="#A78BFA" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

            <Ellipse Width="96" Height="96" Canvas.Left="1600" Canvas.Top="128" Opacity="0.12">
                <Ellipse.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#A78BFA" Offset="0"/>
                        <GradientStop Color="#F472B6" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

            <Ellipse Width="192" Height="192" Canvas.Left="-96" Canvas.Top="792" Opacity="0.08">
                <Ellipse.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#22D3EE" Offset="0"/>
                        <GradientStop Color="#60A5FA" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

            <Ellipse Width="144" Height="144" Canvas.Right="-72" Canvas.Bottom="-72" Opacity="0.1">
                <Ellipse.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FB923C" Offset="0"/>
                        <GradientStop Color="#FBBF24" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Canvas>

        <!-- Main Content -->
        <Border MaxWidth="500"
                Width="500"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="32"
                BorderThickness="1"
                CornerRadius="16"
                Padding="48">
            <Border.Background>
                <SolidColorBrush Color="White" Opacity="0.1"/>
            </Border.Background>
            <Border.BorderBrush>
                <SolidColorBrush Color="White" Opacity="0.2"/>
            </Border.BorderBrush>
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="8" BlurRadius="24" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel>
                <!-- Header -->
                <TextBlock Text="ðŸ”‘" 
                           FontSize="34" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,16"/>
                
                <TextBlock Text="Reset Password" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,12"/>
                
                <TextBlock Name="UsernameDisplay"
                           FontSize="16" 
                           Foreground="#D1D5DB" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,32"/>

                <!-- New Password Input -->
                <TextBlock Text="New Password" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="White" 
                           Margin="0,0,0,12"/>
                
                <!-- Password Input Container -->
                <Border Background="#33FFFFFF" 
                        BorderBrush="#66FFFFFF" 
                        BorderThickness="1" 
                        CornerRadius="8"
                        Height="50"
                        Margin="0,0,0,24">
                    <Grid>
                        <!-- Hidden Password Input -->
                        <PasswordBox Name="NewPasswordInput" 
                                     PasswordChanged="NewPasswordInput_PasswordChanged"
                                     FontSize="16"
                                     Padding="12,8,40,8"
                                     Background="Transparent"
                                     Foreground="White"
                                     BorderThickness="0"
                                     CaretBrush="White"
                                     SelectionBrush="#4A90E2"
                                     VerticalContentAlignment="Center"
                                     behaviors:VirtualKeyboardBehavior.EnableVirtualKeyboard="True" />
                        
                        <!-- Visible Password Input (Initially Hidden) -->
                        <TextBox Name="NewPasswordTextInput" 
                                 TextChanged="NewPasswordTextInput_TextChanged"
                                 PreviewKeyDown="NewPasswordTextInput_KeyDown"
                                 FontSize="16"
                                 Padding="12,8,40,8"
                                 Background="Transparent"
                                 Foreground="White"
                                 BorderThickness="0"
                                 CaretBrush="White"
                                 SelectionBrush="#4A90E2"
                                 VerticalContentAlignment="Center"
                                 Visibility="Collapsed"
                                 behaviors:VirtualKeyboardBehavior.EnableVirtualKeyboard="True" />
                        
                        <!-- Show/Hide Password Toggle Button -->
                        <Button Name="NewPasswordVisibilityToggle"
                                Style="{StaticResource PasswordToggleButtonStyle}"
                                Content="ðŸ‘"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,8,0"
                                Click="PasswordVisibilityToggle_Changed"
                                ToolTip="Show/Hide Password" />
                    </Grid>
                </Border>

                <!-- Confirm Password Input -->
                <TextBlock Text="Confirm Password" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="White" 
                           Margin="0,0,0,12"/>
                
                <!-- Confirm Password Input Container -->
                <Border Background="#33FFFFFF" 
                        BorderBrush="#66FFFFFF" 
                        BorderThickness="1" 
                        CornerRadius="8"
                        Height="50"
                        Margin="0,0,0,32">
                    <Grid>
                        <!-- Hidden Password Input -->
                        <PasswordBox Name="ConfirmPasswordInput" 
                                     PasswordChanged="ConfirmPasswordInput_PasswordChanged"
                                     FontSize="16"
                                     Padding="12,8,40,8"
                                     Background="Transparent"
                                     Foreground="White"
                                     BorderThickness="0"
                                     CaretBrush="White"
                                     SelectionBrush="#4A90E2"
                                     VerticalContentAlignment="Center"
                                     behaviors:VirtualKeyboardBehavior.EnableVirtualKeyboard="True" />
                        
                        <!-- Visible Password Input (Initially Hidden) -->
                        <TextBox Name="ConfirmPasswordTextInput" 
                                 TextChanged="ConfirmPasswordTextInput_TextChanged"
                                 PreviewKeyDown="ConfirmPasswordTextInput_KeyDown"
                                 FontSize="16"
                                 Padding="12,8,40,8"
                                 Background="Transparent"
                                 Foreground="White"
                                 BorderThickness="0"
                                 CaretBrush="White"
                                 SelectionBrush="#4A90E2"
                                 VerticalContentAlignment="Center"
                                 Visibility="Collapsed"
                                 behaviors:VirtualKeyboardBehavior.EnableVirtualKeyboard="True" />
                        
                        <!-- Show/Hide Password Toggle Button -->
                        <Button Name="ConfirmPasswordVisibilityToggle"
                                Style="{StaticResource PasswordToggleButtonStyle}"
                                Content="ðŸ‘"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,8,0"
                                Click="ConfirmPasswordVisibilityToggle_Changed"
                                ToolTip="Show/Hide Password" />
                    </Grid>
                </Border>

                <!-- Password Requirements -->
                <StackPanel Name="PasswordRequirements" Margin="0,0,0,24">
                    <TextBlock Text="Password must meet the following requirements:" 
                               FontSize="12" 
                               Foreground="#D1D5DB" 
                               Margin="0,0,0,8"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Name="LengthIndicator" Text="âœ—" FontSize="14" Foreground="#EF4444" Margin="0,0,8,0"/>
                        <TextBlock Text="At least 8 characters" FontSize="12" Foreground="#D1D5DB"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Name="UppercaseIndicator" Text="âœ—" FontSize="14" Foreground="#EF4444" Margin="0,0,8,0"/>
                        <TextBlock Text="One uppercase letter (A-Z)" FontSize="12" Foreground="#D1D5DB"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Name="LowercaseIndicator" Text="âœ—" FontSize="14" Foreground="#EF4444" Margin="0,0,8,0"/>
                        <TextBlock Text="One lowercase letter (a-z)" FontSize="12" Foreground="#D1D5DB"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Name="NumberIndicator" Text="âœ—" FontSize="14" Foreground="#EF4444" Margin="0,0,8,0"/>
                        <TextBlock Text="One number (0-9)" FontSize="12" Foreground="#D1D5DB"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Name="MatchIndicator" Text="âœ—" FontSize="14" Foreground="#EF4444" Margin="0,0,8,0"/>
                        <TextBlock Text="Passwords match" FontSize="12" Foreground="#D1D5DB"/>
                    </StackPanel>
                </StackPanel>

                <!-- Status Message -->
                <TextBlock Name="StatusMessage" 
                           FontSize="14" 
                           Foreground="#EF4444"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,0,0,24"
                           Visibility="Collapsed"/>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0,12,0,0">

                            

                    <Button Name="BackButton" 
                            Content="â† Back to Login"
                            Width="160"
                            Height="50"
                            Margin="0,0,12,0"
                            Background="#33FFFFFF"
                            Foreground="#66FFFFFF"
                            BorderThickness="0"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Click="BackButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#374151"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Name="ResetPasswordButton" 
                            Style="{StaticResource ModernGradientButtonStyle}"
                            Content="Reset Password"
                            Width="160"
                            IsEnabled="False"
                            Click="ResetPasswordButton_Click" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

