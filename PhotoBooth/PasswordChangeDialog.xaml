<Window x:Class="Photobooth.PasswordChangeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:behaviors="clr-namespace:Photobooth.Behaviors"
        Title="Change Password" 
        Height="280" Width="400" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F8FAFC">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Name="HeaderText" Text="Change Admin Password" FontSize="20" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,8"/>
            <TextBlock Text="Enter a new password for the selected user level" FontSize="14" Foreground="#64748B"/>
        </StackPanel>

        <!-- New Password -->
        <StackPanel Grid.Row="1" Margin="0,0,0,16">
            <TextBlock Text="New Password" FontSize="14" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,8"/>
            <PasswordBox Name="NewPasswordBox" Height="44" FontSize="14" Padding="12,0" 
                         BorderBrush="#CBD5E1" BorderThickness="1" Background="White"
                         behaviors:VirtualKeyboardBehavior.EnableVirtualKeyboard="True"/>
        </StackPanel>

        <!-- Confirm Password -->
        <StackPanel Grid.Row="2" Margin="0,0,0,16">
            <TextBlock Text="Confirm Password" FontSize="14" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,8"/>
            <PasswordBox Name="ConfirmPasswordBox" Height="44" FontSize="14" Padding="12,0" 
                         BorderBrush="#CBD5E1" BorderThickness="1" Background="White"
                         behaviors:VirtualKeyboardBehavior.EnableVirtualKeyboard="True"/>
        </StackPanel>

        <!-- Error Message -->
        <TextBlock Name="ErrorMessage" Grid.Row="3" Text="" FontSize="12" Foreground="#DC2626" 
                   Margin="0,0,0,16" Visibility="Collapsed"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="CancelButton" Content="Cancel" Width="80" Height="36" Margin="0,0,12,0"
                    Background="White" BorderBrush="#E2E8F0" BorderThickness="1" 
                    Foreground="#64748B" FontSize="14" Click="CancelButton_Click"/>
            <Button Name="SaveButton" Content="Save" Width="80" Height="36"
                    Background="#3B82F6" BorderThickness="0" 
                    Foreground="White" FontSize="14" FontWeight="Medium" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 