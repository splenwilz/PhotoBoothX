<UserControl x:Class="Photobooth.PINSetupScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:behaviors="clr-namespace:Photobooth.Behaviors"
             mc:Ignorable="d"
             d:DesignHeight="1080" d:DesignWidth="1920">

    <!-- Resources for PIN box styling -->
    <UserControl.Resources>
        <!-- PIN Box Border Style -->
        <Style x:Key="PINBoxStyle" TargetType="Border">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="White" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="White" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="6"/>
        </Style>

        <!-- PIN Input TextBox Style -->
        <Style x:Key="PINInputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="MaxLength" Value="1"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="CaretBrush" Value="White"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#581C87" Offset="0"/>
                <GradientStop Color="#1E3A8A" Offset="0.5"/>
                <GradientStop Color="#3730A3" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Floating Background Elements -->
        <Canvas>
            <Ellipse Width="160" Height="160" Canvas.Left="-80" Canvas.Top="-80" Opacity="0.1">
                <Ellipse.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#60A5FA" Offset="0"/>
                        <GradientStop Color="#A78BFA" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

            <Ellipse Width="96" Height="96" Canvas.Left="1600" Canvas.Top="128" Opacity="0.12">
                <Ellipse.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#A78BFA" Offset="0"/>
                        <GradientStop Color="#F472B6" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

            <Ellipse Width="128" Height="128" Canvas.Left="1400" Canvas.Top="800" Opacity="0.08">
                <Ellipse.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#34D399" Offset="0"/>
                        <GradientStop Color="#60A5FA" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

            <Ellipse Width="80" Height="80" Canvas.Left="200" Canvas.Top="900" Opacity="0.15">
                <Ellipse.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#F472B6" Offset="0"/>
                        <GradientStop Color="#A78BFA" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

            <Ellipse Width="112" Height="112" Canvas.Left="50" Canvas.Top="300" Opacity="0.09">
                <Ellipse.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#60A5FA" Offset="0"/>
                        <GradientStop Color="#34D399" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

            <Ellipse Width="64" Height="64" Canvas.Left="1700" Canvas.Top="400" Opacity="0.11">
                <Ellipse.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#A78BFA" Offset="0"/>
                        <GradientStop Color="#F472B6" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Canvas>

        <!-- Main Content -->
        <Border MaxWidth="600"
                Width="600"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="16"
                Padding="48">
            <Border.Background>
                <SolidColorBrush Color="White" Opacity="0.1"/>
            </Border.Background>
            <Border.BorderBrush>
                <SolidColorBrush Color="White" Opacity="0.2"/>
            </Border.BorderBrush>
            <Border.BorderThickness>
                <Thickness>1</Thickness>
            </Border.BorderThickness>
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="8" BlurRadius="24" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel>
                <!-- Header -->
                <TextBlock Text="🔐" 
                           FontSize="34" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,16"/>
                
                <TextBlock Text="Set Recovery PIN" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,12"/>
                
                <TextBlock Text="You must create a 4-digit PIN to recover your password" 
                           FontSize="16" 
                           Foreground="#D1D5DB" 
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,0,0,48"/>

                <!-- PIN Entry Section -->
                <StackPanel Name="PINEntrySection">
                    <TextBlock Text="Enter PIN" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="White" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,16"/>

                    <!-- Square PIN Boxes (4 boxes for 4-digit PIN) -->
                    <!-- Rationale: Square boxes provide better UX than single input field, similar to phone PIN entry -->
                    <!-- Fixed to 4 digits to avoid user confusion during recovery (no guessing if they used 4 or 6) -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,0,0,48">
                        <Border Name="PIN1Border" Style="{StaticResource PINBoxStyle}">
                            <TextBox Name="PIN1" Style="{StaticResource PINInputStyle}" 
                                     PreviewTextInput="PINBox_PreviewTextInput"
                                     TextChanged="PINBox_TextChanged"
                                     PreviewKeyDown="PINBox_PreviewKeyDown"
                                     KeyDown="PINBox_KeyDown"
                                     GotFocus="PINBox_GotFocus"
                                     behaviors:VirtualKeyboardBehavior.EnableVirtualKeyboard="True"/>
                        </Border>
                        <Border Name="PIN2Border" Style="{StaticResource PINBoxStyle}">
                            <TextBox Name="PIN2" Style="{StaticResource PINInputStyle}"
                                     PreviewTextInput="PINBox_PreviewTextInput"
                                     TextChanged="PINBox_TextChanged"
                                     PreviewKeyDown="PINBox_PreviewKeyDown"
                                     KeyDown="PINBox_KeyDown"
                                     GotFocus="PINBox_GotFocus"
                                     behaviors:VirtualKeyboardBehavior.EnableVirtualKeyboard="True"/>
                        </Border>
                        <Border Name="PIN3Border" Style="{StaticResource PINBoxStyle}">
                            <TextBox Name="PIN3" Style="{StaticResource PINInputStyle}"
                                     PreviewTextInput="PINBox_PreviewTextInput"
                                     TextChanged="PINBox_TextChanged"
                                     PreviewKeyDown="PINBox_PreviewKeyDown"
                                     KeyDown="PINBox_KeyDown"
                                     GotFocus="PINBox_GotFocus"
                                     behaviors:VirtualKeyboardBehavior.EnableVirtualKeyboard="True"/>
                        </Border>
                        <Border Name="PIN4Border" Style="{StaticResource PINBoxStyle}">
                            <TextBox Name="PIN4" Style="{StaticResource PINInputStyle}"
                                     PreviewTextInput="PINBox_PreviewTextInput"
                                     TextChanged="PINBox_TextChanged"
                                     PreviewKeyDown="PINBox_PreviewKeyDown"
                                     KeyDown="PINBox_KeyDown"
                                     GotFocus="PINBox_GotFocus"
                                     behaviors:VirtualKeyboardBehavior.EnableVirtualKeyboard="True"/>
                        </Border>
                        <Border Name="PIN5Border" Style="{StaticResource PINBoxStyle}" Visibility="Collapsed">
                            <TextBox Name="PIN5" Style="{StaticResource PINInputStyle}"
                                     PreviewTextInput="PINBox_PreviewTextInput"
                                     TextChanged="PINBox_TextChanged"
                                     PreviewKeyDown="PINBox_PreviewKeyDown"
                                     behaviors:VirtualKeyboardBehavior.EnableVirtualKeyboard="True"/>
                        </Border>
                        <Border Name="PIN6Border" Style="{StaticResource PINBoxStyle}" Visibility="Collapsed">
                            <TextBox Name="PIN6" Style="{StaticResource PINInputStyle}"
                                     PreviewTextInput="PINBox_PreviewTextInput"
                                     TextChanged="PINBox_TextChanged"
                                     PreviewKeyDown="PINBox_PreviewKeyDown"
                                     behaviors:VirtualKeyboardBehavior.EnableVirtualKeyboard="True"/>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- Status Message -->
                <TextBlock Name="StatusMessage" 
                           FontSize="14" 
                           Foreground="#10B981"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,24"
                           Visibility="Collapsed"/>

                <!-- Error Message -->
                <TextBlock Name="ErrorMessage" 
                           FontSize="14" 
                           Foreground="#EF4444"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,24"
                           Visibility="Collapsed"/>

                <!-- Hint -->
                <TextBlock Text="💡 PIN must be 4 digits" 
                           FontSize="13" 
                           Foreground="#9CA3AF"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,32"/>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <Button Name="ContinueButton" 
                            Content="Continue"
                            Width="200"
                            Height="50"
                            IsEnabled="False"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="16"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="ContinueButton_Click">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#059669" Offset="0"/>
                                <GradientStop Color="#0D9488" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="8"
                                        Padding="16,12"
                                        x:Name="Border">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

