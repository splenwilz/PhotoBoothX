<UserControl x:Class="Photobooth.ForcedPasswordChangeScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:behaviors="clr-namespace:Photobooth.Behaviors"
             mc:Ignorable="d"
             d:DesignHeight="1080" d:DesignWidth="1920">

    <UserControl.Resources>
        <!-- Modern Card Style -->
        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="White" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="White" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="8" BlurRadius="24" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#059669" Offset="0"/>
                        <GradientStop Color="#0D9488" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                x:Name="Border">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#047857" Offset="0"/>
                                            <GradientStop Color="#0F766E" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="Border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#6B7280"/>
                                <Setter TargetName="Border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Login Button Style (matches AdminLoginScreen) -->
        <Style x:Key="ModernLoginButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#2563EB" Offset="0"/>
                        <GradientStop Color="#7C3AED" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                x:Name="Border">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#1D4ED8" Offset="0"/>
                                            <GradientStop Color="#6D28D9" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#6B7280"/>
                                <Setter TargetName="Border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="White" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="White" Opacity="0.2"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <!-- Main Container with Gradient Background -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#581C87" Offset="0"/>
                <GradientStop Color="#1E3A8A" Offset="0.5"/>
                <GradientStop Color="#3730A3" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Floating Background Elements -->
        <Canvas>
            <Ellipse Width="160" Height="160" Canvas.Left="-80" Canvas.Top="-80" Opacity="0.1">
                <Ellipse.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#60A5FA" Offset="0"/>
                        <GradientStop Color="#A78BFA" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

            <Ellipse Width="96" Height="96" Canvas.Left="1600" Canvas.Top="128" Opacity="0.12">
                <Ellipse.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#A78BFA" Offset="0"/>
                        <GradientStop Color="#F472B6" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

            <Ellipse Width="192" Height="192" Canvas.Left="-96" Canvas.Top="792" Opacity="0.08">
                <Ellipse.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#22D3EE" Offset="0"/>
                        <GradientStop Color="#60A5FA" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

            <Ellipse Width="144" Height="144" Canvas.Right="-72" Canvas.Bottom="-72" Opacity="0.1">
                <Ellipse.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FB923C" Offset="0"/>
                        <GradientStop Color="#FBBF24" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Canvas>

        <!-- Main Password Change Card -->
        <Border Style="{StaticResource ModernCardStyle}"
                MaxWidth="500"
                Width="500"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="32">

            <StackPanel Margin="32">
                <!-- Header Section -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,32">
                    <TextBlock Text="🔒" 
                               FontSize="48" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,16"/>
                    
                    <TextBlock Text="Security Setup Required" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                               
                    <TextBlock Text="Change your password to continue" 
                               FontSize="16" 
                               Foreground="White" 
                               HorizontalAlignment="Center"/>
                </StackPanel>



                <!-- User Info Section -->
                <StackPanel Margin="0,0,0,24">
                    <TextBlock Text="Account Information" 
                               FontSize="16" 
                               Foreground="White" 
                               FontWeight="Medium"
                               Margin="0,0,0,12"/>

                    <Border Background="#33FFFFFF" 
                            BorderBrush="#66FFFFFF" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="16"
                            AutomationProperties.Name="User Account Information"
                            AutomationProperties.HelpText="Details about the current user account requiring password change">
                        <Grid AutomationProperties.Name="Account Details">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Username Row -->
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="Username:"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="White"
                                       Margin="0,0,8,4"
                                       AutomationProperties.Name="Username Label"/>
                            <TextBlock Name="UsernameValue"
                                       Grid.Row="0" Grid.Column="1"
                                       Text="[Loading...]"
                                       FontSize="14"
                                       Foreground="White"
                                       Margin="0,0,0,4"
                                       AutomationProperties.Name="Username Value"
                                       AutomationProperties.LabeledBy="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Border}}, Path=Children[0]}"/>
                            
                            <!-- Access Level Row -->
                            <TextBlock Grid.Row="1" Grid.Column="0"
                                       Text="Access Level:"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="White"
                                       Margin="0,0,8,0"
                                       AutomationProperties.Name="Access Level Label"/>
                            <TextBlock Name="AccessLevelValue"
                                       Grid.Row="1" Grid.Column="1"
                                       Text="[Loading...]"
                                       FontSize="14"
                                       Foreground="White"
                                       AutomationProperties.Name="Access Level Value"
                                       AutomationProperties.LabeledBy="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Border}}, Path=Children[1]}"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- New Password Section -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="New Password" 
                               FontSize="16" 
                               Foreground="White" 
                               FontWeight="Medium"
                               Margin="0,0,0,8"/>

                    <Border Background="#33FFFFFF" 
                            BorderBrush="#66FFFFFF" 
                            BorderThickness="1" 
                            CornerRadius="8"
                            Height="48">
                        <PasswordBox Name="NewPasswordInput" 
                                     FontSize="16"
                                     Padding="12,8"
                                     Background="Transparent"
                                     Foreground="White"
                                     BorderThickness="0"
                                     CaretBrush="White"
                                     SelectionBrush="#4A90E2"
                                     VerticalContentAlignment="Center"
                                     PasswordChanged="NewPasswordInput_PasswordChanged"
                                     TabIndex="1"
                                     AutomationProperties.Name="New Password"
                                     AutomationProperties.HelpText="Enter your new password. Must be at least 8 characters with uppercase, lowercase, and number."
                                     AutomationProperties.IsRequiredForForm="True"
                                     behaviors:VirtualKeyboardBehavior.EnableVirtualKeyboard="True" />
                    </Border>
                </StackPanel>

                <!-- Confirm Password Section -->
                <StackPanel Margin="0,0,0,24">
                    <TextBlock Text="Confirm New Password" 
                               FontSize="16" 
                               Foreground="White" 
                               FontWeight="Medium"
                               Margin="0,0,0,8"/>

                    <Border Background="#33FFFFFF" 
                            BorderBrush="#66FFFFFF" 
                            BorderThickness="1" 
                            CornerRadius="8"
                            Height="48">
                        <PasswordBox Name="ConfirmPasswordInput" 
                                     FontSize="16"
                                     Padding="12,8"
                                     Background="Transparent"
                                     Foreground="White"
                                     BorderThickness="0"
                                     CaretBrush="White"
                                     SelectionBrush="#4A90E2"
                                     VerticalContentAlignment="Center"
                                     KeyDown="ConfirmPasswordInput_KeyDown"
                                     PasswordChanged="ConfirmPasswordInput_PasswordChanged"
                                     TabIndex="2"
                                     AutomationProperties.Name="Confirm New Password"
                                     AutomationProperties.HelpText="Re-enter your new password to confirm it matches."
                                     AutomationProperties.IsRequiredForForm="True"
                                     behaviors:VirtualKeyboardBehavior.EnableVirtualKeyboard="True" />
                    </Border>
                </StackPanel>

                <!-- Password Requirements -->
                <Border Background="#33FFFFFF" 
                        BorderBrush="#66FFFFFF" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="16"
                        Margin="0,0,0,24"
                        AutomationProperties.Name="Password Requirements"
                        AutomationProperties.HelpText="Information about password complexity requirements">
                    <StackPanel>
                        <TextBlock Text="Password Requirements:" 
                                   FontSize="14" 
                                   FontWeight="Medium" 
                                   Foreground="White" 
                                   Margin="0,0,0,8"/>

                        <StackPanel>
                            <TextBlock Name="Length8Req" FontSize="12" Foreground="#9CA3AF" Margin="0,2">
                                <Run Name="Length8ReqIndicator" Text="○ "/>
                                <Run Text="At least 8 characters"/>
                            </TextBlock>
                            <TextBlock Name="UppercaseReq" FontSize="12" Foreground="#9CA3AF" Margin="0,2">
                                <Run Name="UppercaseReqIndicator" Text="○ "/>
                                <Run Text="At least one uppercase letter"/>
                            </TextBlock>
                            <TextBlock Name="LowercaseReq" FontSize="12" Foreground="#9CA3AF" Margin="0,2">
                                <Run Name="LowercaseReqIndicator" Text="○ "/>
                                <Run Text="At least one lowercase letter"/>
                            </TextBlock>
                            <TextBlock Name="NumberReq" FontSize="12" Foreground="#9CA3AF" Margin="0,2">
                                <Run Name="NumberReqIndicator" Text="○ "/>
                                <Run Text="At least one number"/>
                            </TextBlock>
                            <TextBlock Name="MatchReq" FontSize="12" Foreground="#9CA3AF" Margin="0,2">
                                <Run Name="MatchReqIndicator" Text="○ "/>
                                <Run Text="Passwords must match"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Action Button -->
                <Button Name="ChangePasswordButton" 
                        Content="CHANGE PASSWORD AND CONTINUE" 
                        Style="{StaticResource ModernLoginButtonStyle}"
                        Click="ChangePasswordButton_Click"
                        IsEnabled="False"
                        Margin="0,0,0,24"
                        TabIndex="3"
                        AutomationProperties.Name="Change Password and Continue"
                        AutomationProperties.HelpText="Click to change your password and proceed to the admin dashboard">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" BlurRadius="12" Opacity="0.2"/>
                    </Button.Effect>
                </Button>

                

                <!-- Error Message -->
                <TextBlock Name="ErrorMessage" 
                           Foreground="#FBBF24" 
                           FontSize="14" 
                           FontWeight="Medium"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"
                           AutomationProperties.Name="Error Message"
                           AutomationProperties.LiveSetting="Assertive"/>
            </StackPanel>
        </Border>

        <!-- Loading Overlay -->
        <Grid Name="LoadingOverlay" 
              Background="#80000000" 
              Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <Border Background="White"
                        CornerRadius="8"
                        Padding="32,24">
                    <StackPanel>
                        <TextBlock Text="Changing password..." 
                                   Foreground="#374151" 
                                   FontSize="16" 
                                   FontWeight="Medium"
                                   HorizontalAlignment="Center">
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="TextBlock.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                           From="0.3" To="1.0" Duration="0:0:0.8"
                                                           AutoReverse="True"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl> 